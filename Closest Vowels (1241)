#include <iostream>
using namespace std;

int main() {
	int t,n;
	cin>>t;
	while(t--){
	    cin>>n;
	    string s;
	    cin>>s;
	    int c=1;
	    for(int i=0;i<n;i++){
	        if(s[i]=='c'|| s[i]=='r' ||s[i]=='g'||s[i]=='l'){
	            c*=2;
	        }
	        c%=1000000007;
	    }
	    cout<<c<<endl;
	}
	return 0;
}
